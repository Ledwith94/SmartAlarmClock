<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:text="Test Alarm Clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="29dp"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="18dp"
        android:onClick="openAlarm"
        android:id="@+id/button3" />

    <TextView
        android:text="Test Location Services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:id="@+id/textView7" />

    <TextView
        android:text="Test Morning Manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="60dp"
        android:id="@+id/textView8" />

    <Button
        android:text="MANAGer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="11dp"
        android:onClick="openManager"
        android:id="@+id/button4" />

    <Button
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:onClick="openDirection"
        android:layout_above="@+id/textView8"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginEnd="25dp" />

    <TextView
        android:text="Test Punisher Wakeup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignEnd="@+id/textView7"
        android:id="@+id/textView9" />

    <Button
        android:text="Punisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/button5"
        android:onClick="openPunisher"
        android:id="@+id/button6" />

    <TextView
        android:text="Edit User Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="49dp"
        android:id="@+id/textView10" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignEnd="@+id/button4"
        android:layout_marginTop="13dp"
        android:id="@+id/button7" />
</RelativeLayout>
