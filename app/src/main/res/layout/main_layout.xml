<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tempbackground"><![CDATA[
    >

    ]]>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/food2"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/button10"
        android:id="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/car"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shower"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginEnd="19dp"
        android:id="@+id/imageView4" />

    <Button
        android:text="Open Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/button11"
        android:onClick="openDirection"
        android:layout_below="@+id/button10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Welcome to Morning Manager"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/textView13" />

    <Button
        android:text="SET ALARM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/button10"
        android:onClick="openAlarm"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="29dp"
        android:id="@+id/textView14" />

    <Button
        android:text="Edit Cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="openManager"
        android:id="@+id/button12" />

    <Button
        android:text="Add More Activites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="openUserDetails"
        android:id="@+id/button13" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/suit"
        android:id="@+id/imageView5"
        android:layout_above="@+id/textView13"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/breakfast"
        android:id="@+id/imageView2"
        android:layout_above="@+id/textView13"
        android:layout_toStartOf="@+id/button10" />

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/imageView4"
        android:layout_alignParentStart="true" />

</RelativeLayout>